{
  "compilerOptions": {
    "target": "ES2020", // Sets the JavaScript version for output
    "module": "ESNext", // Sets the module system (e.g., ESNext for modern JS)
    "rootDir": "./src", // Specifies the root directory of input files
    "outDir": "./dist", // Specifies the output directory for compiled files
    "moduleResolution": "node",
    "esModuleInterop": true, // Enables compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing
    "strict": true, // Enable strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
  },
  "exclude": ["node_modules", "dist", "tests"]
}
